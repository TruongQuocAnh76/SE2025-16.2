APP_NAME=CertChain
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

FRONTEND_URL=http://localhost:3000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# PostgreSQL Database Configuration
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=certchain
DB_USERNAME=postgres
DB_PASSWORD=password

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# RabbitMQ config
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=reset_email

# Redis Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=certchain_cache

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="CertChain"

# Storage Configuration (Minio for dev, S3 for production)
# Generic storage variables (recommended)
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_REGION=us-east-1
# Internal endpoint (for backend S3 operations inside Docker network)
STORAGE_ENDPOINT=http://nginx:9002
# External endpoint (for browser-accessible presigned URLs)
FRONTEND_STORAGE_ENDPOINT=http://localhost:9002
STORAGE_USE_PATH_STYLE_ENDPOINT=true
STORAGE_BUCKET=certchain-dev

# Legacy AWS variables (still supported as fallback)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=certchain-dev
AWS_INTERNAL_ENDPOINT=http://nginx:9002
AWS_EXTERNAL_ENDPOINT=http://localhost:9002
AWS_ENDPOINT=http://nginx:9002
AWS_URL=http://localhost:9002
AWS_USE_PATH_STYLE_ENDPOINT=true
CLOUD_BUCKET=certchain-dev

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Facebook OAuth Configuration
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/auth/facebook/callback

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal Configuration
PAYPAL_CLIENT_ID=your_sandbox_client_id
PAYPAL_CLIENT_SECRET=your_sandbox_client_secret
PAYPAL_MODE=sandbox

# Blockchain Configuration
BLOCKCHAIN_NETWORK=hardhat
HARDHAT_RPC_URL=http://localhost:8545
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-infura-project-id

# Blockchain Private Key (for deployment and transactions)
BLOCKCHAIN_PRIVATE_KEY=your-private-key-here

# Certificate Contract Addresses (set after deployment)
CERTIFICATE_CONTRACT_ADDRESS_HARDHAT=0x5FbDB2315678afecb367f032d93F642f64180aa3
CERTIFICATE_CONTRACT_ADDRESS_POLYGON=
CERTIFICATE_CONTRACT_ADDRESS_MUMBAI=

# Blockchain Service Configuration
BLOCKCHAIN_SERVICE_URL=http://blockchain:3001

VITE_APP_NAME="${APP_NAME}"
