# Blockchain Service Environment Configuration

# Service Configuration
PORT=3001
NODE_ENV=development

# Blockchain Network Configuration
BLOCKCHAIN_NETWORK=hardhat
HARDHAT_RPC_URL=http://localhost:8545
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-infura-project-id

# Blockchain Private Key (for issuing certificates)
PRIVATE_KEY=your-private-key-here

# Certificate Contract Addresses
CERTIFICATE_CONTRACT_ADDRESS_HARDHAT=0x5FbDB2315678afecb367f032d93F642f64180aa3
CERTIFICATE_CONTRACT_ADDRESS_POLYGON=
CERTIFICATE_CONTRACT_ADDRESS_MUMBAI=

# Database Configuration (for syncing with main app)
DATABASE_URL=postgresql://username:password@localhost:5432/certchain
# Or for SQLite
# DATABASE_URL=sqlite:../backend/database/database.sqlite

# API Security
API_SECRET=your-api-secret-key
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Logging
LOG_LEVEL=debug

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000