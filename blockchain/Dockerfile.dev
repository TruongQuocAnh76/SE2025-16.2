# Development Dockerfile for blockchain microservice
FROM node:22-alpine

# Install pnpm
RUN npm install -g pnpm

# Create app directory
WORKDIR /app

# Install system dependencies for development
RUN apk add --no-cache git python3 make g++ curl sudo

# Create non-root user (optional in development)
RUN addgroup -g 1001 -S nodejs && \
    adduser -S blockchain -u 1001 && \
    echo 'blockchain ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers && \
    mkdir -p /home/blockchain && \
    chown blockchain:nodejs /home/blockchain

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies (including dev dependencies)
RUN pnpm install --frozen-lockfile

# Copy source code and configuration files
COPY . .

# Change ownership to blockchain user
RUN chown -R blockchain:nodejs /app

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD node -e "fetch('http://localhost:3001/v1/health').then(r => r.ok ? process.exit(0) : process.exit(1)).catch(() => process.exit(1))"

# Start the application in development mode
CMD ["pnpm", "run", "dev"]