{
  "name": "certchain-platform",
  "version": "1.0.0",
  "description": "Certchain - Online Learning Platform with Blockchain Certificates",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:remote": "docker-compose -f docker-compose.dev.yml -f docker-compose.dev.remote.yml up --build",
    "prod": "docker-compose up --build",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:remote:down": "docker-compose -f docker-compose.dev.yml -f docker-compose.dev.remote.yml down",
    "prod:down": "docker-compose down",
    "build:dev": "docker-compose -f docker-compose.dev.yml build",
    "build:prod": "docker-compose build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "docker compose down --rmi local -v --remove-orphans && docker system prune -f",
    "ci:test": "act -j backend-test --container-options=\"--memory=4g --cpus=2\" --rm",
    "ci:build": "act -j build-and-push --container-options=\"--memory=4g --cpus=2\" --rm",
    "ci": "act --container-options=\"--memory=4g --cpus=2\" --rm",
    "cd:dry-run": "DRY_RUN=1 DRY_RUN_MODE=static APP_DIR=$(pwd) COMPOSE_FILE=docker-compose.prod.yml ./deploy.sh"
  }
}
