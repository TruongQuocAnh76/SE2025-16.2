{
  "name": "certchain-platform",
  "version": "1.0.0",
  "description": "Certchain - Online Learning Platform with Blockchain Certificates",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "prod": "docker-compose up --build",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "prod:down": "docker-compose down",
    "build:dev": "docker-compose -f docker-compose.dev.yml build",
    "build:prod": "docker-compose build",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  }
}
